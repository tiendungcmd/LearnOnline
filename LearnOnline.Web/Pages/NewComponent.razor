@page "/new"
@using LearnOnline.Models
@inject HttpClient _httpClient;
@inject INewService NewService;

<ul id="list-products">
    <div class="col-12 new">
        <h3>New</h3>
    </div>

    @foreach (var item in NewService.News)
    {
        <div class="item">
            <a href="/new/@item.Id">
                <img class="media-img" src="../image/@item.Image" style="height:100px;width:200px" alt="">
            </a>
            <div class="name">@item.Title</div>
            <a href="/new/@item.Id">
                <div class="price">Xem</div>
            </a>

        </div>
    }
</ul>
<style>
    .new {
        text-align: center;
    }
</style>
@code {

    private static List<New> News = new List<New>();

    protected override async Task OnInitializedAsync()
    {
        //var response = await _httpClient.GetFromJsonAsync<ServiceResponse<List<New>>>("api/New");
        await NewService.GetNews();
    }
}
