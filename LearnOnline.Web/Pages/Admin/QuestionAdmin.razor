            color: #fff;
        }

        #list-comment .item .text {
            padding: 20px 50px;
            color: #fff;
        }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        //check login
        var user = await session.GetItemAsync<string>("SessionUser");
        if (user != "admin@gmail.com")
        {
            NavigationManager.NavigateTo("login");
        }

    }
}
