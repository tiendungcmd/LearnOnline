            color: #626a67;
        }

    #list-products {
        display: flex;
        list-style: none;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap;
    }

        #list-products .item img {
            display: block;
            margin: 0px auto;
            margin-top: 17px;
        }

        #list-products .item .stars {
